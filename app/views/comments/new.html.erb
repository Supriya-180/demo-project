
<%= form_with model:@comment, method:"post" do |f| %>

    <div>
      <%= f.label :user_id %><br>
      <%= f.select :user_id, options_for_select(User.all.map{|b| [b.name, b.id]}) %><br>
          <% @comment.errors.full_messages_for(:user_id).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= f.label :product_id %><br>
      <%= f.select :product_id, options_for_select(Product.all.map{|b| [b.name, b.id]}) %><br>
          <% @comment.errors.full_messages_for(:user_id).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= f.label :commenter_name %><br>
      <%= f.text_field :commenter_name %>
      <% @comment.errors.full_messages_for(:commenter_name).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
      <% @comment.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>


  
  <div>
    <%= f.submit %>
  </div>


<% end %>



